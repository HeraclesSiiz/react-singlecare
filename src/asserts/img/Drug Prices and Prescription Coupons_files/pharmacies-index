(function(){var o=SCSHelper.fetchUserAgent(),f,t,e;o===SCSHelper.userAgents.IOS?$(".btn-google-play").addClass("hide"):o===SCSHelper.userAgents.ANDROID&&$(".btn-app-store").addClass("hide");var s={slide1:["$11.69","$7.43","$8.21","$4.00","$11.69","$9.40"],slide2:["$4.00","$10.30","$10.30","$4.00","$11.20","$15.00"],slide3:["$12.64","$20.50","$20.50","$10.84","$24.70","$37.00"],slide4:["$4.65","$4.65","$4.70","$4.00","$4.68","$4.68"]},r=Object.keys(s).length,u=[""];$(".sample-card--name").each(function(){var n=$(this).find("a").attr("href");u.push(n)});f=u[1];t=$(".pin");t.addClass("animation-target");var h=function(n){t.fadeOut("slow",function(){t.removeClass("animation-target");for(var i in n)$(".pin-"+i).text(n[i]);t.addClass("animation-target").fadeIn("slow")})},c=$(".sample-card--slider"),n=1,l=function(n){h(s["slide"+n]);c.css({transform:"translate3d("+(n-1)*(-100/r)+"%,0,0)"})},i=$(".sample-card--footer");i.find(".sample-card--next").click(function(){n<r&&n++;e(n)});i.find(".sample-card--prev").click(function(){n>1&&n--;e(n)});e=function(n){f=u[n];i.find("a").removeClass("disabled");n==r?i.find(".sample-card--next").addClass("disabled"):n==1&&i.find(".sample-card--prev").addClass("disabled");l(n)};$(".sample-card--footer").click(function(n){n.target===this&&(window.location=f)});$(".sample-card--footer").mouseover(function(n){n.target===this&&($(this).css("cursor","pointer"),$(".sample-card--name a").toggleClass("underlined"))});$(".sample-card--footer").mouseout(function(n){n.target===this&&($(this).css("cursor","auto"),$(".sample-card--name a").toggleClass("underlined"))})})()